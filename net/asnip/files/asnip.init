#!/bin/sh /etc/rc.common

START=80
USE_PROCD=1

start_service() {
	for config in "/etc/asnip/"*.toml; do
		instance=$(basename -s .toml "$config")
		procd_open_instance $instance
		procd_set_param respawn 120 1 10
		procd_set_param command /usr/bin/asnip --config "$config"
		procd_set_param stdout  1
		procd_set_param stderr  1
		procd_close_instance
	done
}
